[user]
	email = andrew@afontaine.ca
	name = Andrew Fontaine
	signingkey = 5C5029FC
[core]
	editor = vim
	excludesfile = ~/.gitignore
[push]
	default = current
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset %C(dim magenta){%G?% GS% GK}%Creset' --abbrev-commit
	lg2 = log --graph --pretty=format:'%h -%d %s (%cr) <%an> {%G?% GS% GK}' --abbrev-commit
[pull]
	rebase = true
[help]
	autocorrect = 5
[merge]
	tool = vim
[difftool]
	prompt = false
[commit]
	gpgsign = true
